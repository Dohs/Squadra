@page "/login"
@using Squadra.UI.Models
@using Squadra.UI.Services
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg rounded-lg">
        <h3 class="text-2xl font-bold text-center">Connectez-vous à votre compte</h3>
        <EditForm Model="@loginDto" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <div class="mt-4">
                <div>
                    <label class="block" for="email">Email</label>
                    <InputText id="email" @bind-Value="loginDto.Email" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" />
                    <ValidationMessage For="() => loginDto.Email" />
                </div>
                <div class="mt-4">
                    <label class="block">Mot de passe</label>
                    <InputText id="password" type="password" @bind-Value="loginDto.Password" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" />
                    <ValidationMessage For="() => loginDto.Password" />
                </div>
                <div class="flex items-baseline justify-between">
                    <button class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Se connecter</button>
                    <a href="/register" class="text-sm text-blue-600 hover:underline">Créer un compte</a>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private LoginDto loginDto = new LoginDto();

    private async Task HandleLogin()
    {
        try
        {
            await AuthService.Login(loginDto);
            NavigationManager.NavigateTo("/profile");
        }
        catch (Exception ex)
        {
            // TODO: Display error to user
            Console.WriteLine($"Login failed: {ex.Message}");
        }
    }
}
